{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/asset-info.schema.json",
  "title": "Asset Info",
  "type": "object",
  "additionalProperties": true,

  "properties": {
    "asset_name": { "type": "string" },
    "asset_type": { "type": "string" },

    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },

    "animations": {
      "type": "object",
      "description": "Map of animation name â†’ animation config",
      "additionalProperties": { "$ref": "#/$defs/animation" }
    },

    "areas": {
      "type": "array",
      "description": "Unified list of named areas available to this asset",
      "items": { "$ref": "#/$defs/area" },
      "uniqueItems": false
    },

    "child_assets": {
      "type": "array",
      "description": "Children that can spawn relative to this asset",
      "items": { "$ref": "#/$defs/childAsset" }
    },

    "z_threshold": { "type": "integer" },
    "min_same_type_distance": { "type": "integer", "minimum": 0 },
    "min_distance_all": { "type": "integer", "minimum": 0 },

    "size_settings": {
      "type": "object",
      "properties": {
        "scale_percentage": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": true
    },

    "has_shading": { "type": "boolean" },

    "lighting_info": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "has_light_source": { "type": "boolean" },
          "light_intensity": { "type": "integer", "minimum": 0, "maximum": 255 },
          "radius": { "type": "integer", "minimum": 0 },
          "x_radius": { "type": "integer", "minimum": 0 },
          "y_radius": { "type": "integer", "minimum": 0 },
          "falloff": { "type": "integer", "minimum": 0 },
          "factor": { "type": "integer", "minimum": 0 }
        }
      }
    }

 
  },

  "required": ["asset_name", "asset_type", "animations", "areas"],

  "$defs": {
    "point": {
      "type": "array",
      "prefixItems": [
        { "type": "integer" },
        { "type": "integer" }
      ],
      "items": false,
      "minItems": 2,
      "maxItems": 2,
      "description": "Pixel coordinate (x, y) in image space"
    },

    "area": {
      "type": "object",
      "additionalProperties": false,
      "description": "Minimal geometry payload used by Area.cpp",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "points": {
          "type": "array",
          "items": { "$ref": "#/$defs/point" },
          "minItems": 1
        },
        "original_dimensions": {
          "type": "array",
          "prefixItems": [
            { "type": "integer", "minimum": 1 },
            { "type": "integer", "minimum": 1 }
          ],
          "items": false,
          "minItems": 2,
          "maxItems": 2
        },
        "offset_x": { "type": "integer", "default": 0 },
        "offset_y": { "type": "integer", "default": 0 }
      },
      "required": ["name", "points", "original_dimensions"],
      "allOf": [
        { "not": { "required": ["json_path"] } }  
      ]
    },

    "childAsset": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "z_offset": { "type": "integer" },
        "area_name": {
          "type": "string",
          "description": "Name of an entry in areas[] used as this child's spawn region"
        }
      },
      "required": ["area_name"]
    },

    "animation": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "frames_path": { "type": "string" },
        "speed": { "type": "number" },
        "on_end": { "type": "string" },
        "event_data": { "type": "array" },
        "randomize": { "type": "boolean" },
        "audio_path": { "type": "string" },
        "volume": { "type": "number" },

        "area_name": {
          "type": "string",
          "description": "Optional: link this animation to a named area"
        }
      },
      "allOf": [
        { "not": { "required": ["area_path"] } } 
      ]
    }
  }
}
